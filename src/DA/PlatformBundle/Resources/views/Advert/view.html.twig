{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "DAPlatformBundle::layout.html.twig" %}

{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block daplatform_body %}
    <article>
        <div class="row categories">
            <div class="col-md-12">
                {% if not advert.categories.empty %}
                    <p>Cette annonce est parue dans les catégories suivantes :</p>
                    {% for category in advert.categories %}
                        <span>{{ category.name }}</span>
                        {#{% if not loop.last %}, {% endif %}#}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <div class="row">
            {% if advert.image is not null %}
                <div class="col-md-4">
                    <img class="img-responsive" src="{{ advert.image.url }}" alt="{{ advert.image.url }}">
                </div>
            {% endif %}
            <div class="col-md-5">
                <h4>{{ advert.title }}</h4>
                <i>Par {{ advert.author }}, le {{ advert.date|date('d/m/Y') }}</i>
            </div>
            <div class="col-md-3">
                <h4>Compétences :</h4>
                <ul>
                    {% for skill in listAdvertSkills %}
                        <li>
                           {{ skill.skill.name }} : {{ skill.level }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>
                    {{ advert.content }}
                </p>
            </div>
            <div class="col-md-12">
                <h3>Les candidatures :</h3>
                <div class="row">
                    {% for application in listApplications %}
                        <div class="col-md-6">
                            <h4>{{ application.author }}</h4>
                            <p>{{ application.content }}</p>
                            <p>le <em>{{ application.date|date('d/m/Y') }}</em></p>
                        </div>
                    {% endfor %}
                </div>
            </div>
       </div>
        <p>
            <a href="{{ path('da_platform_home') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour à la liste
            </a>
            <a href="{{ path('da_platform_edit', {'id': advert.id}) }}" class="btn btn-default">
                <i class="glyphicon glyphicon-edit"></i>
                Modifier l'annonce
            </a>
            <a href="{{ path('da_platform_delete', {'id': advert.id}) }}" class="btn btn-danger">
                <i class="glyphicon glyphicon-trash"></i>
                Supprimer l'annonce
            </a>
        </p>
    </article>

{% endblock %}